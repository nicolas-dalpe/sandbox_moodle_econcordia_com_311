{{!

    @template theme_econcordia/banner

    This template renders the course banner.
}}
{{#is_coursehomepage}}
<div class="ec-banner js-banner" role="banner">
    <div class="container">
        <div class="ec-banner__content">
            <div class="ec-banner__headings">
                <h1>{{course_shortname}}</h1>
                <h2>
                    {{#course_fullname}}
                        {{course_fullname}}
                    {{/course_fullname}}
                </h2>
            </div>
            {{#course_image}}
                <img src="{{course_image}}" alt=""/>
            {{/course_image}}
        </div>
    </div>
</div>
{{/is_coursehomepage}}

{{#is_lesson}}
<div class="ec-banner js-banner ec-banner__lesson">
    <div class="container">
        <div class="ec-banner__content">
            <div class="ec-banner__shape-wrapper">
                <div class="ec-banner__shape">
                    <h1>{{lesson_title}}</h1>
                    <h2>
                        <span class="js-lesson-summary"></span>

                        <!-- EC: Add separator -->
                        {{> theme_econcordia/separator }}
                    </h2>
                </div>
            </div>
        </div>
    </div>
</div>
{{/is_lesson}}
{{#js}}
$(function() {

    // Retrieve the Lesson number
    if ($('.ec-banner__lesson').length > 0) {
        let lessonSummary = $('#single_section_tiles .summary').text();
        $('.js-lesson-summary').text(lessonSummary);
    }
});
{{/js}}
